<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:src="@drawable/man"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/mainedt"
                android:elevation="@dimen/_3sdp"
                android:hint="FIRST NAME"
                android:textSize="@dimen/_15sdp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp" />

            <EditText
                android:id="@+id/edtsecoundname"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:background="@drawable/mainedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SECOUND NAME"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <EditText
                android:id="@+id/edtemail"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:background="@drawable/mainedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IMAIL ADDRESS"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <EditText
                android:id="@+id/edtphone"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:background="@drawable/mainedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PHONE NUMBER"
                android:imeOptions="actionNext"
                android:inputType="phone" />

            <EditText
                android:id="@+id/edtschool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mainedt"
                android:textSize="@dimen/_15sdp"
                android:elevation="@dimen/_3sdp"
                android:hint="SCHOOL"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp" />

            <EditText
                android:id="@+id/edtcalification"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:background="@drawable/mainedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CALIFICATION"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <EditText
                android:id="@+id/edtscpassing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mainedt"
                android:elevation="@dimen/_3sdp"
                android:hint="PASSING YER"
                android:textSize="@dimen/_15sdp"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp" />

            <EditText
                android:id="@+id/edtdegree"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/mainedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DEGREE"
                android:textSize="@dimen/_15sdp"
                android:imeOptions="actionNext"
                android:inputType="text" />
            <EditText
                android:id="@+id/edtdegreeyer"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/mainedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="DEGREE YER"
                android:imeOptions="actionNext"
                android:inputType="number" />
            <EditText
                android:id="@+id/edtabout"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/mainedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="ABOUT ME"
                android:imeOptions="actionNext"
                android:inputType="text" />
            <EditText
                android:id="@+id/edtexpiriance"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/mainedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="EXPIRIANCE"
                android:textSize="@dimen/_15sdp"
                android:imeOptions="actionNext"
                android:inputType="text" />
            <EditText
                android:id="@+id/edtcompny"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/mainedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="COMPANY NAME"
                android:imeOptions="actionNext"
                android:inputType="text" />
            <EditText
                android:id="@+id/edtcompneyadd"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/mainedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="COMPANY ADDRESS"
                android:imeOptions="actionNext"
                android:inputType="text" />
            <EditText
                android:id="@+id/edtrefrence"
                android:elevation="@dimen/_3sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/mainedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:hint="COMPANY REFRENCE"
                android:imeOptions="actionNext"
                android:inputType="text" />



            <Spinner
                android:id="@+id/cityspin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mainedt"
                android:textSize="@dimen/_15sdp"
                android:elevation="@dimen/_3sdp"
                android:padding="@dimen/_23sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/Radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdmale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/black"
                        android:text="MALE" />

                    <RadioButton
                        android:id="@+id/rdfemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/black"
                        android:text="FEMALE" />
                    <RadioButton
                        android:id="@+id/rdother"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/black"
                        android:text="OTHER" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/skilltext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_55sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="SKILLS" />

                    <CheckBox
                        android:id="@+id/chec"
                        android:buttonTint="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:text="c langvage" />

                    <CheckBox
                        android:id="@+id/checcc"
                        android:buttonTint="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:text="c++ " />

                    <CheckBox
                        android:id="@+id/chejava"
                        android:buttonTint="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:text="java " />

                    <CheckBox
                        android:id="@+id/cheandroid"
                        android:buttonTint="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:text="android " />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hobbiestext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_55sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="HOBBIES" />

                    <CheckBox
                        android:id="@+id/cheksports"
                        android:buttonTint="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:text="sports" />

                    <CheckBox
                        android:id="@+id/chekmovies"
                        android:buttonTint="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:text="movies" />

                    <CheckBox
                        android:id="@+id/chektraveling"
                        android:buttonTint="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:text="traveling " />

                    <CheckBox
                        android:id="@+id/chekmusic"
                        android:buttonTint="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_60sdp"
                        android:text="music " />


                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/mainedt"
                android:layout_gravity="center"
                android:text="submit" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>